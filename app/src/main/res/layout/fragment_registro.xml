<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".ui.login.LoginFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ingreso_registro_image"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/shadowInput">
                    <Spinner
                        android:id="@+id/documentoSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:fontFamily="@font/montserrat_bold_font"
                        android:textSize="@dimen/textMd"
                        android:gravity="center"
                        style="@style/InputLogin"
                        android:hint="@string/tipo_de_documento" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/shadowInput">
                    <EditText
                        android:id="@+id/numeroDocumentoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:fontFamily="@font/montserrat_bold_font"
                        android:textSize="@dimen/textMd"
                        android:inputType="numberSigned"
                        android:gravity="center"
                        style="@style/InputLogin"
                        android:hint="@string/numero_de_documento" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/shadowInput">
                    <EditText
                        android:id="@+id/nombresEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:fontFamily="@font/montserrat_bold_font"
                        android:textSize="@dimen/textMd"
                        android:inputType="text"
                        android:gravity="center"
                        style="@style/InputLogin"
                        android:hint="@string/nombre_y_apellido_del_participante" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/shadowInput">
                    <EditText
                        android:id="@+id/correoElectronicoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:fontFamily="@font/montserrat_bold_font"
                        android:textSize="@dimen/textMd"
                        android:inputType="textEmailAddress"
                        android:gravity="center"
                        style="@style/InputLogin"
                        android:hint="@string/correo_electronico_del_participante"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/shadowInput">
                    <EditText
                        android:id="@+id/contrasenaEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:fontFamily="@font/montserrat_bold_font"
                        android:textSize="@dimen/textMd"
                        android:inputType="textPassword"
                        android:gravity="center"
                        style="@style/InputLogin"
                        android:hint="@string/contrasena"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/shadowInput">
                    <EditText
                        android:id="@+id/verificarContrasenaEditTest"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:fontFamily="@font/montserrat_bold_font"
                        android:textSize="@dimen/textMd"
                        android:inputType="textPassword"
                        android:gravity="center"
                        style="@style/InputLogin"
                        android:hint="Verifique su contrasena"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/shadowInput">
                    <EditText
                        android:id="@+id/numeroCelularEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:fontFamily="@font/montserrat_bold_font"
                        android:textSize="@dimen/textMd"
                        android:gravity="center"
                        android:inputType="phone"
                        style="@style/InputLogin"
                        android:hint="@string/n_mero_de_celular" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/shadowInput">
                    <EditText
                        android:focusable="false"
                        android:editable="false"
                        android:id="@+id/fechaNacimientoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:fontFamily="@font/montserrat_bold_font"
                        android:textSize="@dimen/textMd"
                        android:inputType="none"
                        android:gravity="center"
                        style="@style/InputLogin"
                        android:hint="@string/fecha_de_nacimiento_del_participante"/>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/shadowInput">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <CheckBox
                                    android:id="@+id/estoyDeAcuerdoCheckBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    style="@style/CustomCheckBoxStyle"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/label"
                            android:fontFamily="@font/montserrat_bold_font"
                            android:textSize="@dimen/textSm"
                            android:layout_marginStart="12dp"
                            android:text="@string/estoy_de_acuerdo_con_la_politica_de_tratamiento_de_datos"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/shadowInput">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <CheckBox
                                    android:id="@+id/certificoCheckBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    style="@style/CustomCheckBoxStyle"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/label"
                            android:fontFamily="@font/montserrat_bold_font"
                            android:textSize="@dimen/textSm"
                            android:layout_marginStart="12dp"
                            android:text="@string/certifico_que_el_origen_de_mis_fondos_provienen_de_acciones_legales_acorde_con_la_ley"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/shadowInput">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <CheckBox
                                    android:id="@+id/autorizoCeckBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    style="@style/CustomCheckBoxStyle"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/label"
                            android:fontFamily="@font/montserrat_bold_font"
                            android:textSize="@dimen/textSm"
                            android:layout_marginStart="12dp"
                            android:text="@string/autorizo_el_envio_de_publicidad_por_los_diferentes_medios"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/crearCuentaButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CrearCuentaButton"
                        android:fontFamily="@font/montserrat_bold_font"
                        android:textSize="@dimen/textXl"
                        android:text="@string/crear_cuenta"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/label"
                            android:fontFamily="@font/montserrat_bold_font"
                            android:textSize="@dimen/textMd"
                            android:text="@string/ya_estas_registrado"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>