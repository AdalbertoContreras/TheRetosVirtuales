<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TheRetosVirtuales" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TheRetosVirtuales" parent="Base.Theme.TheRetosVirtuales" />

    <style name="Theme.TheRetosVirtuales.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TheRetosVirtuales.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TheRetosVirtuales.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CustomCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox_icon</item>
    </style>
    <style name="buttonTheRetos">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="IniciarSesionButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/iniciar_sesion_button</item>
    </style>
    <style name="CrearCuentaButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/crear_cuenta_button</item>
    </style>
    <style name="IngresoRegistroButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/ingreso_registro_button</item>
    </style>
    <style name="PremiosButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/premios_button</item>
    </style>
    <style name="ComoJugarButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/como_jugar_button</item>
    </style>
    <style name="QuienesSomosButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/quienes_somos_button</item>
    </style>
    <style name="ETicketsButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/e_ticket_button</item>
    </style>
    <style name="Contactanos" parent="buttonTheRetos">
        <item name="android:background">@drawable/contactanos_button</item>
    </style>
    <style name="MiCuentaButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/mi_cuenta_button</item>
    </style>
    <style name="SalirButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/salir_button</item>
    </style>
    <style name="EnviarNuevaContrasenaButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/enviar_nueva_contrasena_button</item>
    </style>
    <style name="RecuperarContrasenaButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/recuperar_contrasena_button</item>
    </style>
    <style name="TituloJuegoButton" parent="buttonTheRetos">
        <item name="android:background">@drawable/titulo_juego_button</item>
    </style>
    <style name="InputLogin">
        <item name="android:textSize">20sp</item>
        <item name="height">40dp</item>
        <item name="android:textColor">#AE8FDB</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/input_login</item>
    </style>
    <style name="shadowInput" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">#fff</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="shadowInputSinMargin" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">#fff</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
</resources>